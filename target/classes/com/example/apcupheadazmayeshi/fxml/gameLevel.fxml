<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/LoginStyle.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.apcupheadazmayeshi.View.LoginController">
    <center>
        <VBox alignment="CENTER" maxWidth="350" prefHeight="528.0">
            <Button alignment="CENTER" mnemonicParsing="false" onMouseClicked="#goToGame" text="submit" BorderPane.alignment="CENTER" />
            <TextField alignment="CENTER" onKeyTyped="#updateGameLevel" promptText="enter game level" />
         <Button mnemonicParsing="false" text="Logout" onMouseClicked="#logout"/>
        </VBox>
    </center>
</BorderPane>
