<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.apcupheadazmayeshi.View.SignupController" stylesheets="@../css/LoginStyle.css">
    <center>
        <VBox alignment="CENTER" maxWidth="350" prefHeight="528.0">
            <Label alignment="CENTER" text="Username" textFill="#8600ff">
                <font>
                    <Font size="26.0" />
                </font>
            </Label>
            <TextField fx:id="username" alignment="CENTER" onKeyTyped="#typeUsername" promptText="enter your username" />
            <Label alignment="CENTER" text="Password" textFill="#8600ff">
                <font>
                    <Font size="27.0" />
                </font>
            </Label>
            <PasswordField fx:id="password" alignment="CENTER" onKeyTyped="#typePassword" promptText="enter your password" />
         <Label alignment="CENTER" contentDisplay="CENTER" text="Check Password" textFill="#8600ff">
            <font>
               <Font size="26.0" />
            </font>
         </Label>
         <PasswordField fx:id="password1" alignment="CENTER" onKeyTyped="#checkPassword" promptText="enter your password again" />
            <HBox spacing="15.0" alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0">
                <children>
                    <Button fx:id="registerButton" styleClass="primary-btn" text="Signup" onMouseClicked="#signup"/>
                    <Button fx:id="registerButton1" layoutX="164.0" layoutY="48.0" styleClass="primary-btn"
                            text="Back" onMouseClicked="#BackToLoginMenu"/>
                </children>
            </HBox>
        </VBox>
    </center>
</BorderPane>
